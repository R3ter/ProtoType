// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
model User{
  id String @id  @default(uuid())
  full_name String
  email String @unique
  phone_number String @unique
  Role Role @default(STUDENT)
  password String
  Active Boolean @default(false)
  userInfo UserInfo?
  teacherProfile TeacherProfile?

  skipedMaterials Boolean @default(false)
  skipedInfo Boolean @default(false)

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
model UserInfo{
  id String @id  @default(uuid())
  user User @relation(fields: [userId], references: [id])
  userId String @unique
  birth_date DateTime @default(now())
  Current_education_level Education_Level
  preferred_materials CourseTag[]
  image_URL String?

  reviews Rating[]
  favoriteCourses Materials[]

  longitude String?
  latitude String?
  address String?
  City City
  Area Area
  

  createdAt DateTime @default(now())
}
model TeacherProfile{
  id String @id @default(uuid())
  user User @relation(fields: [teacherId], references: [id])
  teacherId String @unique
  phone String
  email String
  description DLookUp
  image_URL String?
  subjects CourseTag[]
  reviews Rating[]
  Courses Materials[]

  longitude String?
  latitude String?
  address String?
  City City
  Area Area
  
  createdAt DateTime @default(now())
}

model CourseTag{
  id String @id @default(uuid())
  name String?
  lookUp LookUp
}
model Rating{
  id String @id @default(uuid())
  ratingStars Int
  review String
  user User

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
model Area{
  id String @id @default(uuid())
  name String?
  lookUp LookUp
  City City
  latitude String
  longitude String
  createdAt DateTime @default(now())
}
model City{
  id String @id @default(uuid())
  name String?
  lookUp LookUp
  latitude String
  longitude String
  createdAt DateTime @default(now())
}
model Materials {
  id String @id  @default(uuid())
  name String?
  image_URL String?
  teacher User
  lookUp  LookUp
  description DLookUp
  education_level Education_Level 
  createdAt DateTime @default(now())
  tags CourseTag[]
}
model LookUp{
  id String @id  @default(uuid())
  eng String
  ar String
  fr String?
  createdAt DateTime @default(now())
}
model DLookUp{
  id  String @id  @default(uuid())
  ar  String
  eng String?
  fr  String?
}
model Education_Level{
  id String @id  @default(uuid())
  lookUp LookUp
  education_level Education_Level_enum @unique
  name String?
}

enum Education_Level_enum {
  Kindergarten
  Primary_School
  Preparatory_Stage
  Secondary_School
  
  Preschool
  Elementary_School
  Middle_School
  High_School
  Diploma
  Doctorate
}
enum Role {
  STUDENT
  TEACHER
}
